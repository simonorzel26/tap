{
  "name": "tap",
  "version": "1.0.0",
  "description": "TAP (Time Allocation Protocol) - A federated booking protocol for real-time availability and bookings across untrusted parties",
  "private": true,
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "scheduling",
    "booking",
    "protocol",
    "federated",
    "real-time",
    "availability",
    "time-allocation",
    "distributed-systems"
  ],
  "homepage": "https://github.com/simonorzel26/tap",
  "bugs": {
    "url": "https://github.com/simonorzel26/tap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonorzel26/tap.git"
  },
  "author": "simonorzel26",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "lint:fix": "turbo run lint:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "turbo": "latest"
  }
}
